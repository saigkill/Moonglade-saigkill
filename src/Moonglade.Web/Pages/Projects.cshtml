@page "/pages/projects"
@model ProjectsModel
@namespace Moonglade.Web.Pages
@{
}

@section Scripts {
    <script>
        document.getElementById('go-project').onclick = function() {
            window.open("https://saschamanns.de/pages/projects/petitions/democratic_year");
        };

    </script>
}

<div class="row">
    <div>
        <img src="https://moongladesm.blob.core.windows.net/images/badges/project.png" width="80%" alt="Projects" />
    </div>
    <h1 style="margin-top: 2em">@Model.Header.Value</h1>
    <div class="projects">
        @foreach (var project in Model.Projects)
        {
            <div class="project">
                <h2>@project.ProjectName</h2>
                <p>@project.ProjectSummary</p>
                <ejs-button id="go-project" cssClass="e-info" content="@Model.LearnMore.Value"></ejs-button>
            </div>
        }
    </div>
</div>
