@inject IOptions<SyndicationSettings> SyndicationSettings
@{
    string ontoplistPrefix = "https://www.ontoplist.com/images/ontoplist31.png?id="; //63e50902a62dd
    string ontoplistLink = ontoplistPrefix + SyndicationSettings.Value.Ontoplist.ID;
    string topblogsPrefix = "https://www.topblogs.de/tracker.php?do=in&id="; // 11089
    string topblogsLink = topblogsPrefix + SyndicationSettings.Value.Topblogs.ID;
}

<div class="aside-widget p-3 rounded-3 shadow-sm border">
    <h6 class="card-subtitle mb-3 text-secondary">Syndication</h6>

    <div role="list">
        @if (SyndicationSettings.Value.Netvibes.Enabled)
        {
            <li><a href="@SyndicationSettings.Value.Netvibes.Url" rel="noopener" target="_blank"><img border="0" alt="add2netvibes" src="~/images/add2netvibes.gif" /></a></li>
        }
        @if (SyndicationSettings.Value.Blogarama.Enabled)
        {
            <li><a href="@SyndicationSettings.Value.Blogarama.ID" rel="noopener" target="_blank"><img src="~/images/Blogarama.jpg" width="33%" alt="Blogarama.com - Follow me on Blogarama" /></a></li>
        }
        @if (BlogConfig.AdvancedSettings.BloggereiEnabled)
        {
            <li><a href="https://www.bloggerei.de" target="_blank" rel="noopener"><img src="https://www.bloggerei.de/bgpublicon.jpg" width="80" height="15" border="0" alt="Blogverzeichnis - Bloggerei.de" /></a></li>
        }
        @* @if (BlogConfig.AdvancedSettings.BloggingfusionEnabled)
{
        <li><a href="@BlogConfig.AdvancedSettings.BloggingfusionEnabled" rel="noopener" target="_blank"><img src="https://www.bloggingfusion.com/images/badges/bf-badge-88x31.png" alt="BloggingFusion" /></a></li>
        } *@
        @if (BlogConfig.AdvancedSettings.BloggeramtEnabled)
        {
            <li><a href="https://www.bloggeramt.de" title="Blog" target="_blank" rel="noopener"><img src="https://www.bloggeramt.de/images/blog_button1.gif" style="border: 0;" alt="Blogverzeichnis" /></a></li>
        }
        @if (BlogConfig.AdvancedSettings.TopblogsEnabled)
        {
            <li>
                <!-- TopBlogs.de das Original - Blogverzeichnis | Blog Top Liste -->
                <a href="https://www.topblogs.de/" target="_blank" rel="noopener"><img border="0" src="@topblogsLink" alt="TopBlogs.de das Original - Blogverzeichnis | Blog Top Liste" /></a>
                <!-- /TopBlogs.de das Original - Blogverzeichnis | Blog Top Liste -->
            </li>
        }
        @if (BlogConfig.AdvancedSettings.OntoplistUrl != null)
        {
            <li><a href="@BlogConfig.AdvancedSettings.OntoplistUrl" target="_blank"><img src="@ontoplistLink" alt="Best Software Development Blogs - OnToplist.com" border="0" width="33%"></a></li>
        }
        @if (BlogConfig.AdvancedSettings.BloglovinUrl != null)
        {
            <!-- Begin Bloglovin Button -->
        }
    </div>
</div>